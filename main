import pygame

from dados.Tabuleiro import Tabuleiro

pygame.init()

tamanho_tela = (800, 800)
tela = pygame.display.set_mode(tamanho_tela)
tabuleiro = Tabuleiro(tamanho_tela[0], tamanho_tela[1])

def draw(display):
    display.fill('white')

    tabuleiro.draw(display)
    
    pygame.display.update()


running = True
while running:
	mx, my = pygame.mouse.get_pos()
	for event in pygame.event.get():
		if event.type == pygame.QUIT:
			running = False

		elif event.type == pygame.MOUSEBUTTONDOWN:
			if event.button == 1:
				tabuleiro.handle_click(mx, my)

	draw(tela)
    